{
    // Prevents eslint from looking at parent files.
    "root" : true,

    // Use eslint recommended options by default.
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],

    // Use ES7 (2016)
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module"
    },

    // Make eslint aware of these environments' global variables etc.
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },

    // Override rules.
    // 0 Off
    // 1 Warning
    // 2 Error
    "rules": {
        // Give a warning when console.log is used.
        "no-console": 1
    }
}